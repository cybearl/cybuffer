{
    "name": "@cybearl/cybuffer",
    "productName": "CyBuffer",
    "version": "2025.1.1",
    "description": "An extension of the Uint8Array class that implements cryptography-related operations.",
    "author": "Cybearl <[email protected]> (https://www.cybearl.com/)",
    "license": "MIT",
    "private": false,
    "type": "module",
    "keywords": [
        "cybearl",
        "buffer",
        "Uint8Array",
        "TypedArray",
        "utilities"
    ],
    "homepage": "https://github.com/cybearl/cybuffer",
    "repository": {
        "url": "https://github.com/cybearl/cybuffer"
    },
    "bugs": "https://github.com/cybearl/cybuffer/issues",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/@cybearl"
    },
    "main": "index.js",
    "module": "index.mjs",
    "types": "index.d.ts",
    "engines": {
        "node": ">=20"
    },
    "files": [
        "*"
    ],
    "exports": {
        ".": {
            "import": "./index.mjs",
            "require": "./index.js"
        }
    },
    "scripts": {
        "v-bump": "yarn version --patch",
        "build": "tsup",
        "test:sandbox": "tsx ./tests/sandbox.ts",
        "test:bench": "tsx ./tests/benchmark.ts",
        "test:unit": "vitest",
        "lint": "biome lint . && biome format .",
        "lint:fix": "biome lint . --write && biome format --write .",
        "check-types": "tsc --noEmit"
    },
    "dependencies": {
        "@cybearl/cypack": "^2025.1.2",
        "dedent-js": "^1.0.1",
        "loglevel": "^1.9.2"
    },
    "peerDependencies": {
        "typescript": ">=5.4.0"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/copyfiles": "^2.4.4",
        "@types/minimist": "^1.2.5",
        "@types/node": "^22.10.2",
        "@types/valid-url": "^1.0.7",
        "concurrently": "^9.1.1",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "happy-dom": "^16.5.3",
        "logform": "^2.7.0",
        "minimist": "^1.2.8",
        "tsconfig-paths-webpack-plugin": "^4.2.0",
        "tsup": "^8.3.5",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^2.1.8",
        "webpack": "^5.97.1",
        "winston": "^3.17.0"
    }
